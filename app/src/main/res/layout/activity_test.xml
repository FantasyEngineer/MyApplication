<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_trans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试头部的消失与出现" />

            <TextView
                android:id="@+id/tv_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="视图动画百分比消失"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_bar1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="属性动画按值位移"
                android:textColor="#333333"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_trans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位移" />


            <TextView
                android:id="@+id/tv_scale1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="缩放视图动画"
                android:textColor="#333333"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_scale2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="缩放属性动画"
                android:textColor="#333333"
                android:textSize="15dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放大" />

            <TextView
                android:id="@+id/tv_rotate1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="缩放视图动画"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_rotate2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/orange"
                android:gravity="center"
                android:text="旋转属性动画"
                android:textColor="#333333"
                android:textSize="15dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旋转" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
