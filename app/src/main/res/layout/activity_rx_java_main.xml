<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_test"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_bottom_line_selector"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="RXJAVA经典结构"
        android:textColor="@color/tv_color_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y5"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y5"
            android:text="subscribe()多种重载方法:"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sub_onnext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_line_selector"
                android:gravity="center"
                android:text="接受onNext()"
                android:textColor="@color/tv_color_selector" />

            <TextView
                android:id="@+id/tv_sub_onnext_onerror"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_line_selector"
                android:gravity="center"
                android:text="接受onNext与onError"
                android:textColor="@color/tv_color_selector" />

            <TextView
                android:id="@+id/tv_sub_onnext_onerror_oncomp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_line_selector"
                android:gravity="center"
                android:text="接受onNext、onError与onComp"
                android:textColor="@color/tv_color_selector" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Nodisposable"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_line_selector"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="不使用dispsable"
            android:textColor="@color/tv_color_selector" />

        <TextView
            android:id="@+id/tv_disposable"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_line_selector"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="使用dispose终止接受"
            android:textColor="@color/tv_color_selector" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_Scheduler"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_bottom_line_selector"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="线程调度Scheduler"
        android:textColor="@color/tv_color_selector" />

    <!--<com.hjg.baseapp.widget.AspectRatioImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/schedule"-->
        <!--app:ari_stretch="horizontal" />-->

    <TextView
        android:id="@+id/tv_Single"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_bottom_line_selector"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="Single的使用"
        android:textColor="@color/tv_color_selector" />

    <TextView
        android:id="@+id/tv_Subject"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_bottom_line_selector"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="Subject桥梁或者代理(继承Observable)"
        android:textColor="@color/tv_color_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_AsyncSubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_line_selector"
            android:gravity="center"
            android:text="AsyncSubject"
            android:textColor="@color/tv_color_selector" />

        <TextView
            android:id="@+id/tv_BehaviorSubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_line_selector"
            android:gravity="center"
            android:text="BehaviorSubject"
            android:textColor="@color/tv_color_selector" />

        <TextView
            android:id="@+id/tv_PublishSubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_line_selector"
            android:gravity="center"
            android:text="PublishSubject"
            android:textColor="@color/tv_color_selector" />

        <TextView
            android:id="@+id/tv_ReplaySubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_line_selector"
            android:gravity="center"
            android:text="ReplaySubject"
            android:textColor="@color/tv_color_selector" />
    </LinearLayout>

    <com.hjg.baseapp.widget.AspectRatioImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rx_subject"
        app:ari_stretch="horizontal" />

    <TextView
        android:id="@+id/tv_Serialized"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_bottom_line_selector"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="串行化（不太懂tode）"
        android:textColor="@color/tv_color_selector" />
</LinearLayout>
