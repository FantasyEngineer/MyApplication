<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_amount_layout"
    android:focusable="true"
    android:orientation="horizontal"
    android:showDividers="middle">

    <ImageButton
        android:id="@+id/btnDecrease"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_amount_left"
        android:gravity="center"
        android:src="@mipmap/icon_minus" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center"
        android:textSelectHandleRight="@color/white"
        android:inputType="number"
        android:minWidth="60dp"
        android:text="1" />

    <ImageButton
        android:id="@+id/btnIncrease"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_amount_right"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:src="@mipmap/icon_add" />
</LinearLayout>